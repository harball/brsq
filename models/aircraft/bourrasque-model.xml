  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~ movement RIGHT -->
  <animation>
    <type>rotate</type>
    <object-name>elevon_R</object-name>
    <expression>
      <sum>
        <product>
          <value>-16</value>
          <sum>
            <property>sim/multiplay/generic/int[7]</property>
            <value>-1</value>
          </sum>
        </product>
