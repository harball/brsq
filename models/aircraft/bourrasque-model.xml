    </center>
    <axis>
      <x>0</x>
      <y>1.14</y>
      <z>-0.12</z>
    </axis>
  </animation>

  <!--
________________________________________________________________________________
                                                                           SLATS
  -->

  <!-- ~~~~~~~~~~~~~~~~~~ movement LEFT -->
  <animation>
    <type>rotate</type>
    <object-name>slat_L</object-name>
    <property>surface-positions/slat-pos-norm</property> <!-- 2 max -->
    <factor>2</factor>
    <center>
      <x-m>2.3</x-m>
      <y-m>-7</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>slat_L</object-name>
    <property>surface-positions/slat-pos-norm</property> <!-- 20 max -->
    <factor>-20</factor>
    <center>
      <x-m>1.95</x-m>
      <y-m>-3.25</y-m>
      <z-m>0.01</z-m>
    </center>
    <axis>
      <x>-2.15</x>
      <y>2.55</y>
      <z>0.13</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ movement RIGHT -->
  <animation>
    <type>rotate</type>
    <object-name>slat_R</object-name>
    <property>surface-positions/slat-pos-norm</property> <!-- 2 max -->
    <factor>2</factor>
    <center>
      <x-m>2.3</x-m>
      <y-m>7</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>slat_R</object-name>
    <property>surface-positions/slat-pos-norm</property> <!-- 20 max -->
    <factor>-20</factor>
    <center>
      <x-m>1.95</x-m>
      <y-m>3.25</y-m>
      <z-m>0.01</z-m>
    </center>
    <axis>
      <x>2.15</x>
      <y>2.55</y>
      <z>0.13</z>
    </axis>
  </animation>

  <!--
________________________________________________________________________________
                                                                          CANOPY
  -->

  <!-- ~~~~~~~~~~~~~~~~~~ group -->
  <animation>
    <name>block_canopy</name>
    <object-name>canopy</object-name>
    <object-name>canopy_plexi</object-name>
    <object-name>canopy-accessoires</object-name>
    <object-name>canopy-poignees</object-name>
    <object-name>canopy_plexi_int</object-name>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~ binding -->
  <animation>
    <type>pick</type>
    <object-name>canopy-poignees</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <property>/controls/doors/canopy</property>
        <command>property-cycle</command>
        <value>0</value>
        <value>0.6</value>
        <value>1</value>
        <wrap>true</wrap>
        <condition>
          <property>sim/multiplay/generic/float[11]</property>
        </condition>
      </binding>
    </action>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~ movement -->
  <animation>
    <type>rotate</type>
    <object-name>block_canopy</object-name>
    <property>sim/multiplay/generic/float[0]</property> <!-- for MP sim/model/canopy-pos-norm -->
    <interpolation>
      <entry><ind>0</ind><dep>0</dep></entry>
      <entry><ind>0.6</ind><dep>3</dep></entry>
      <entry><ind>1</ind><dep>45</dep></entry>
    </interpolation>
    <center>
      <x-m>-1.0765</x-m>
      <y-m>0</y-m>
      <z-m>1.357</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

