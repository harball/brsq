  <!--
================================================================================
                                                                       ANIMATION
================================================================================

________________________________________________________________________________
                                                                          CANARD
  -->

  <!-- ~~~~~~~~~~~~~~~~~~ group -->
  <animation>
    <name>block_canard</name>
    <object-name>canard_L</object-name>
    <object-name>canard_R</object-name>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~ movement -->
  <animation>
    <type>rotate</type>
    <object-name>block_canard</object-name>
    <property>sim/multiplay/generic/float[1]</property> <!-- for MP sim/model/canards-pos-norm -->
    <factor>20</factor>
    <center>
      <x-m>-1.69</x-m>
      <y-m>0</y-m>
      <z-m>0.5</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

  <!--
________________________________________________________________________________
                                                                          DERIVE
  -->

  <!-- ~~~~~~~~~~~~~~~~~~ movement -->
  <animation>
    <type>rotate</type>
    <object-name>derive</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor>10</factor>
    <center>
      <x-m>5.82</x-m>
      <y-m>0</y-m>
      <z-m>2.01</z-m>
    </center>
    <axis>
      <x>-1.06</x>
      <y>0</y>
      <z>-1.72</z>
    </axis>
  </animation>

  <!--
________________________________________________________________________________
                                                                 AILERONS : ROLL
  -->
  <!-- ~~~~~~~~~~~~~~~~~~ movement LEFT -->
  <animation>
    <type>rotate</type>
    <object-name>aileron_L</object-name>
    <expression>
      <sum>
        <product>
          <value>-16</value>
          <sum>
            <property>sim/multiplay/generic/int[7]</property>
            <value>-1</value>
          </sum>
        </product>
        <product>
          <property>sim/multiplay/generic/int[7]</property>
          <property>surface-positions/left-aileron-pos-norm</property>
          <value>8</value>
        </product>
      </sum>
    </expression>
    <center>
      <x-m>4.08</x-m>
      <y-m>-3.73</y-m>
      <z-m>0.08</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>2.28</y>
      <z>0.17</z>
    </axis>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~ movement RIGHT -->
  <animation>
    <type>rotate</type>
    <object-name>aileron_R</object-name>
    <expression>
      <sum>
        <product>
          <value>-16</value>
          <sum>
            <property>sim/multiplay/generic/int[7]</property>
            <value>-1</value>
          </sum>
        </product>
        <product>
          <property>sim/multiplay/generic/int[7]</property>
          <property>surface-positions/right-aileron-pos-norm</property>
          <value>8</value>
        </product>
      </sum>
    </expression>
    <center>
      <x-m>4.08</x-m>
      <y-m>3.73</y-m>
      <z-m>0.08</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>2.28</y>
      <z>-0.17</z>
    </axis>
  </animation>

  <!--
________________________________________________________________________________
