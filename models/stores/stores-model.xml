<PropertyList>

  <path>stores.ac</path>

  <!--
================================================================================
                                                             OBJECTS DECLARATION
================================================================================
  -->

  <!-- ~~~~~~~~~~~~~~~~~~ opaque + transparent -->
  <animation>
    <type>material</type>
    <!-- fixed parts -->
    <object-name>center-pylon</object-name>
    <object-name>center-tank2000L</object-name>
    <object-name>center-tank1250L</object-name>
    <object-name>wing-pylons</object-name>
    <object-name>wing-ext-pylons</object-name>
    <object-name>wing-tanks2000L</object-name>
    <object-name>wing-tanks1250L</object-name>
    <object-name>wing-ext-tanks1250L</object-name>
  </animation>

  <effect>
    <inherits-from>Aircraft/bourrasque/models/effects/aircraft/aircraft</inherits-from>
    <object-name>center-pylon</object-name>
    <object-name>center-tank2000L</object-name>
    <object-name>center-tank1250L</object-name>
    <object-name>wing-pylons</object-name>
    <object-name>wing-ext-pylons</object-name>
    <object-name>wing-tanks2000L</object-name>
    <object-name>wing-tanks1250L</object-name>
    <object-name>wing-ext-tanks1250L</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>center-pylon</object-name>
    <object-name>center-tank2000L</object-name>
    <object-name>center-tank1250L</object-name>
    <object-name>wing-pylons</object-name>
    <object-name>wing-ext-pylons</object-name>
    <object-name>wing-tanks2000L</object-name>
    <object-name>wing-tanks1250L</object-name>
    <object-name>wing-ext-tanks1250L</object-name>
    <property-base>sim/model/livery</property-base>
    <texture-prop>texture-tank</texture-prop>
    <texture-tank>texture_tanks.png</texture-tank>
  </animation>


  <!--
================================================================================
                                                         CONTROLS AND ANIMATIONS
================================================================================
________________________________________________________________________________
                                                                          CENTER
  -->

  <!-- ~~~~~~~~~~~~~~~~~~ pylon -->
  <animation>
    <type>select</type>
    <object-name>center-pylon</object-name>
    <condition>
      <or>
        <equals>
          <property>sim/multiplay/generic/string[0]</property>
          <value type="string">2</value>
        </equals>
        <equals>
          <property>sim/multiplay/generic/string[0]</property>
          <value type="string">1</value>
        </equals>
      </or>
    </condition>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~ tank 1250 l -->
  <animation>
    <type>select</type>
    <object-name>center-tank1250L</object-name>
    <condition>
      <equals>
        <property>sim/multiplay/generic/string[0]</property>
        <value type="string">1</value>
      </equals>
    </condition>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~ tank 2000 l -->
  <animation>
    <type>select</type>
    <object-name>center-tank2000L</object-name>
    <condition>
      <equals>
        <property>sim/multiplay/generic/string[0]</property>
        <value type="string">2</value>
      </equals>
    </condition>
  </animation>

  <!--
________________________________________________________________________________
                                                                           WINGS
  -->
  <!-- ~~~~~~~~~~~~~~~~~~ pylons -->
  <animation>
    <type>select</type>
    <object-name>wing-pylons</object-name>
    <condition>
      <not>
        <equals>
          <property>sim/multiplay/generic/string[1]</property>
          <value type="string"></value>
        </equals>
      </not>
    </condition>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~ ext pylons -->
  <animation>
    <type>select</type>
    <object-name>wing-ext-pylons</object-name>
    <condition>
      <equals>
        <property>sim/multiplay/generic/string[1]</property>
        <value type="string">3</value>
      </equals>
    </condition>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~ tanks 1250 l -->
  <animation>
    <type>select</type>
    <object-name>wing-tanks1250L</object-name>
    <condition>
      <equals>
        <property>sim/multiplay/generic/string[1]</property>
        <value type="string">1</value>
      </equals>
    </condition>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~ tanks 2000 l -->
  <animation>
    <type>select</type>
    <object-name>wing-tanks2000L</object-name>
    <condition>
      <or>
        <equals>
          <property>sim/multiplay/generic/string[1]</property>
          <value type="string">2</value>
        </equals>
        <equals>
          <property>sim/multiplay/generic/string[1]</property>
          <value type="string">3</value>
        </equals>
      </or>
    </condition>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~ ext tanks 1250 l -->
  <animation>
    <type>select</type>
    <object-name>wing-ext-tanks1250L</object-name>
    <condition>
      <equals>
        <property>sim/multiplay/generic/string[1]</property>
        <value type="string">3</value>
      </equals>
    </condition>
  </animation>

</PropertyList>

