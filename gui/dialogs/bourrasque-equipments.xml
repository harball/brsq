<PropertyList>

  <name>bourrasque-equipments</name>
  <modal type="bool">false</modal>
  <layout>vbox</layout>
  <group>
    <layout>hbox</layout><empty><stretch>1</stretch></empty>
    <text><label>bourrasques's equipment</label></text>
    <empty><stretch>1</stretch></empty>
    <button><pref-width>16</pref-width><pref-height>16</pref-height><legend />
      <default>1</default><keynum>27</keynum><border>2</border>
      <binding><command>dialog-close</command></binding>
      <binding><command>dialog-apply</command></binding>
    </button>
  </group>

  <hrule />

  <!-- ~~~~~~~~~~~~~~~~~~ ground equipment -->
  <group>
    <layout>table</layout>
    <halign>left</halign>
    <text>
      <row>0</row><col>1</col>
      <label>ground equipment</label>
    </text>

    <checkbox>
      <row>1</row><col>0</col>
      <x>50</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/sim/model/ground-equipment-e</property>
      <binding>
        <command>property-toggle</command>
        <property>/sim/model/ground-equipment-e</property>
      </binding>
    </checkbox>
    <text>
      <row>1</row><col>1</col>
      <halign>left</halign>
      <label>covers</label>
    </text>

    <checkbox>
      <row>2</row><col>0</col>
      <x>50</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/sim/model/ground-equipment-f</property>
      <binding>
        <command>property-toggle</command>
        <property>/sim/model/ground-equipment-f</property>
      </binding>
    </checkbox>
    <text>
      <row>2</row><col>1</col>
      <halign>left</halign>
      <label>fuel truck</label>
    </text>


    <checkbox>
      <row>3</row><col>0</col>
      <x>50</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/sim/model/ground-equipment-p</property>
      <binding>
        <command>property-toggle</command>
        <property>/sim/model/ground-equipment-p</property>
      </binding>
    </checkbox>
    <text>
      <row>3</row><col>1</col>
      <halign>left</halign>
      <label>epu</label>
    </text>


    <checkbox>
      <row>4</row><col>0</col>
      <x>50</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/sim/model/ground-equipment-s</property>
      <binding>
        <command>property-toggle</command>
        <property>/sim/model/ground-equipment-s</property>
      </binding>
    </checkbox>
    <text>
      <row>4</row><col>1</col>
      <halign>left</halign>
      <label>scale</label>
    </text>


    <checkbox>
      <row>5</row><col>0</col>
      <x>50</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/sim/model/ground-equipment-g</property>
      <binding>
        <command>property-toggle</command>
        <property>/sim/model/ground-equipment-g</property>
      </binding>
    </checkbox>
    <text>
      <row>5</row><col>1</col>
      <halign>left</halign>
      <label>shocks</label>
    </text>
  </group>
  <hrule />

  <!-- ~~~~~~~~~~~~~~~~~~ probe -->
  <group>
    <layout>table</layout>
    <halign>left</halign>

    <checkbox>
      <row>0</row><col>0</col>
      <x>50</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/systems/refuel/serviceable</property>
      <binding>
        <command>property-toggle</command>
        <property>/systems/refuel/serviceable</property>
      </binding>
    </checkbox>
    <text>
      <row>0</row><col>1</col>
      <halign>left</halign>
      <label>refueling probe</label>
    </text>

  </group>

  <hrule />

  <!-- ~~~~~~~~~~~~~~~~~~ tanks -->
  <group>
    <layout>table</layout>
    <halign>left</halign>
    <text>
      <row>0</row><col>0</col>
      <label>wing tanks</label>
    </text>
    <button>
      <row>1</row><col>0</col>
      <pref-width>70</pref-width><pref-height>20</pref-height>
      <legend>none</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_load_store("wing", "none");
          ]]>
        </script>
      </binding>
    </button>
    <button>
      <row>2</row><col>0</col>
      <pref-width>70</pref-width><pref-height>20</pref-height>
      <legend>1250 l</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_load_store("wing", "tank-1250");
          ]]>
        </script>
      </binding>
    </button>
    <button>
      <row>3</row><col>0</col>
      <pref-width>70</pref-width><pref-height>20</pref-height>
      <legend>2000 l</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_load_store("wing", "tank-2000");
          ]]>
        </script>
      </binding>
    </button>
    <button>
      <row>4</row><col>0</col>
      <pref-width>70</pref-width><pref-height>20</pref-height>
      <legend>full</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_load_store("wing", "tank-1250+tank-2000");
          ]]>
        </script>
      </binding>
    </button>

    <text>
      <row>0</row><col>1</col>
      <label>center tank</label>
    </text>
    <button>
      <row>1</row><col>1</col>
      <pref-width>70</pref-width><pref-height>20</pref-height>
      <legend>none</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_load_store("center", "none");
          ]]>
        </script>
      </binding>
    </button>
    <button>
      <row>2</row><col>1</col>
      <pref-width>70</pref-width><pref-height>20</pref-height>
      <legend>1250 l</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_load_store("center", "tank-1250");
          ]]>
        </script>
      </binding>
    </button>
    <button>
      <row>3</row><col>1</col>
      <pref-width>70</pref-width><pref-height>20</pref-height>
      <legend>2000 l</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_load_store("center", "tank-2000");
          ]]>
        </script>
      </binding>
    </button>
    <button>
      <row>4</row><col>1</col>
      <pref-width>70</pref-width><pref-height>20</pref-height>
      <legend>aar pod</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_load_store("center", "refuel-pod");
          ]]>
        </script>
      </binding>
    </button>

    <text>
      <row>0</row><col>2</col>
      <label>wing ext</label>
    </text>
    <button>
      <row>1</row><col>2</col>
      <pref-width>70</pref-width><pref-height>20</pref-height>
      <legend>none</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_load_store("wing-pylons", "none");
          ]]>
        </script>
      </binding>
    </button>
    <button>
      <row>2</row><col>2</col>
      <pref-width>70</pref-width><pref-height>20</pref-height>
      <legend>smoke</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_load_store("wing-pylons", "smoke-pod");
          ]]>
        </script>
      </binding>
    </button>

  </group>

  <hrule />

</PropertyList>

