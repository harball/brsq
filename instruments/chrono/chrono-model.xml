<?xml version="1.0" encoding="utf-8"?>
<!-- Boeing style chronometer, by Syd Adams -->
<!--
description :
    this file uses the 3d model ans defines animations of the model and objects
    (mouvements, lightings)
    it loads if necessary the submodels files

-->

<PropertyList>

  <name>chrono</name>
  <path>instrument_chrono.ac</path>

  <!--
================================================================================
                                                             OBJECTS DECLARATION
================================================================================
  -->
  <!-- ~~~~~~~~~~~~~~~~~~ opaque + transparent -->
  <animation>
    <object-name>chrono.box</object-name>
    <object-name>chrono.needle</object-name>
    <object-name>chrono.chr_btn</object-name>
    <object-name>chrono.mode_knob</object-name>
    <object-name>chrono.et_knob</object-name>
    <!-- digits top -->
    <object-name>chrono.h-01</object-name>
    <object-name>chrono.h-10</object-name>
    <object-name>chrono.colon</object-name>
    <object-name>chrono.m-01</object-name>
    <object-name>chrono.m-10</object-name>
    <!-- digits bottom -->
    <object-name>chrono.et-00.01</object-name>
    <object-name>chrono.et-00.10</object-name>
    <object-name>chrono.dot</object-name>
    <object-name>chrono.et-01.00</object-name>
    <object-name>chrono.et-10.00</object-name>
    <object-name>chrono.box-emit</object-name>
    <object-name>chrono.mode_knob-emit</object-name>
    <object-name>chrono.et_knob-emit</object-name>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ hidden -->
  <animation>
    <type>select</type>
    <object-name>chrono.h-01</object-name>
    <object-name>chrono.h-10</object-name>
    <object-name>chrono.m-01</object-name>
    <object-name>chrono.m-10</object-name>
    <object-name>chrono.et-00.01</object-name>
    <object-name>chrono.et-00.10</object-name>
    <object-name>chrono.dot</object-name>
    <object-name>chrono.et-01.00</object-name>
    <object-name>chrono.et-10.00</object-name>
    <condition>
      <property>sim/multiplay/generic/int[5]</property>
    </condition>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ effects -->
  <effect>
    <inherits-from>Aircraft/bourrasque/models/effects/interior/interior-flashlight</inherits-from>
    <object-name>chrono.box</object-name>
    <object-name>chrono.needle</object-name>
    <object-name>chrono.chr_btn</object-name>
    <object-name>chrono.mode_knob</object-name>
    <object-name>chrono.et_knob</object-name>
    <!-- digits top -->
    <object-name>chrono.h-01</object-name>
    <object-name>chrono.h-10</object-name>
    <object-name>chrono.colon</object-name>
    <object-name>chrono.m-01</object-name>
    <object-name>chrono.m-10</object-name>
    <!-- digits bottom -->
    <object-name>chrono.et-00.01</object-name>
    <object-name>chrono.et-00.10</object-name>
    <object-name>chrono.dot</object-name>
    <object-name>chrono.et-01.00</object-name>
    <object-name>chrono.et-10.00</object-name>
    <object-name>chrono.box-emit</object-name>
    <object-name>chrono.mode_knob-emit</object-name>
    <object-name>chrono.et_knob-emit</object-name>

  </effect>

  <!-- ~~~~~~~~~~~~~~~~~~ emitting (light) -->
  <animation>
    <type>material</type>
    <object-name>chrono.box-emit</object-name>
    <object-name>chrono.mode_knob-emit</object-name>
    <object-name>chrono.et_knob-emit</object-name>
    <object-name>chrono.needle</object-name>
    <emission>
      <factor-prop>/controls/lighting/instruments-norm</factor-prop>
      <red>0.8</red>
      <green>0.2</green>
      <blue>0.2</blue>
    </emission>
    <condition>
      <property>sim/multiplay/generic/int[5]</property>
    </condition>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ emitting (color) -->
  <animation>
    <type>material</type>
    <object-name>chrono.h-01</object-name>
    <object-name>chrono.h-10</object-name>
    <object-name>chrono.colon</object-name>
    <object-name>chrono.m-01</object-name>
    <object-name>chrono.m-10</object-name>
    <object-name>chrono.et-00.01</object-name>
    <object-name>chrono.et-00.10</object-name>
    <object-name>chrono.dot</object-name>
    <object-name>chrono.et-01.00</object-name>
    <object-name>chrono.et-10.00</object-name>
    <emission>
      <red>0.6</red>
      <green>0.6</green>
      <blue>0.6</blue>
    </emission>
  </animation>

  <!--
================================================================================
                                                         CONTROLS AND ANIMATIONS
================================================================================
  -->
  <animation>
    <type>pick</type>
    <object-name>chrono.mode_knob</object-name>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ animation mode knob -->
  <animation>
    <type>rotate</type>
    <object-name>chrono.mode_knob</object-name>
    <object-name>chrono.mode_knob-emit</object-name>
    <property>/instrumentation/my_aircraft/chrono/controls/mode-knob</property>
    <interpolation>
      <entry><ind>0</ind><dep>0</dep></entry>
      <entry><ind>1</ind><dep>35</dep></entry>
      <entry><ind>2</ind><dep>-144</dep></entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0.032</y-m>
      <z-m>0.034</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control mode knob -->
  <animation>
    <type>pick</type>
    <object-name>chrono.mode_knob</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
instrument_chrono.event_click_mode_knob(1);
          ]]>
        </script>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>1</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
instrument_chrono.event_click_mode_knob(-1);
          ]]>
        </script>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-chrono-mode-knob</tooltip-id>
        <label>Choose mode</label>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control chr btn -->
  <animation>
    <type>pick</type>
    <object-name>chrono.chr_btn</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
instrument_chrono.event_click_chr_btn();
          ]]>
        </script>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-chrono-chr-btn</tooltip-id>
        <label>Start/Pause chrono</label>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ animation elapsed time knob -->
  <animation>
    <type>rotate</type>
    <object-name>chrono.et_knob</object-name>
    <object-name>chrono.et_knob-emit</object-name>
    <property>/instrumentation/my_aircraft/chrono/controls/et-knob</property>
    <interpolation>
      <entry><ind>0</ind><dep>0</dep></entry>
      <entry><ind>1</ind><dep>35</dep></entry>
      <entry><ind>2</ind><dep>-144</dep></entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>-0.032</y-m>
      <z-m>-0.033</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control elapsed time knob -->
  <animation>
    <type>pick</type>
    <object-name>chrono.et_knob</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
instrument_chrono.event_click_et_knob();
          ]]>
        </script>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>1</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
instrument_chrono.event_click_et_knob_reset();
          ]]>
        </script>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-chrono-et-knob</tooltip-id>
        <label>Manage elapsed time, MMB=reset</label>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ animation needle -->
  <animation>
    <type>rotate</type>
    <object-name>chrono.needle</object-name>
    <property>instrumentation/my_aircraft/chrono/outputs/needle</property>
    <factor>6</factor>
    <center>
      <x-m>0.0</x-m>
      <y-m>0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <condition>
      <property>sim/multiplay/generic/int[5]</property>
    </condition>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ animation colon -->
  <animation>
    <type>select</type>
    <object-name>chrono.colon</object-name>
    <condition>
      <property>sim/multiplay/generic/int[5]</property>
      <property>instrumentation/my_aircraft/chrono/outputs/colon</property>
    </condition>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ animation digits top -->
  <animation>
    <type>textranslate</type>
    <object-name>chrono.h-10</object-name>
    <property>instrumentation/my_aircraft/chrono/outputs/digit-tl</property>
    <factor>0.01</factor>
    <step>10</step>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>chrono.h-01</object-name>
    <property>instrumentation/my_aircraft/chrono/outputs/digit-tl</property>
    <factor>0.1</factor>
    <step>1</step>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>chrono.m-10</object-name>
    <property>instrumentation/my_aircraft/chrono/outputs/digit-tr</property>
    <factor>0.01</factor>
    <step>10</step>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>chrono.m-01</object-name>
    <property>instrumentation/my_aircraft/chrono/outputs/digit-tr</property>
    <factor>0.1</factor>
    <step>1</step>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ animation digits bottom -->
  <animation>
    <type>textranslate</type>
    <object-name>chrono.et-10.00</object-name>
    <property>instrumentation/my_aircraft/chrono/outputs/digit-bl</property>
    <factor>0.01</factor>
    <step>10</step>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>chrono.et-01.00</object-name>
    <property>instrumentation/my_aircraft/chrono/outputs/digit-bl</property>
    <factor>0.1</factor>
    <step>1</step>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>chrono.et-00.10</object-name>
    <property>instrumentation/my_aircraft/chrono/outputs/digit-br</property>
    <factor>0.01</factor>
    <step>10</step>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>chrono.et-00.01</object-name>
    <property>instrumentation/my_aircraft/chrono/outputs/digit-br</property>
    <factor>0.1</factor>
    <step>1</step>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

</PropertyList>
