    <halign>center</halign>
    <box>true</box>
    <condition>
      <or>
        <equals>
          <property>/instrumentation/my_aircraft/nd/controls/mode</property>
          <value>APP</value>
        </equals>
        <equals>
          <property>/instrumentation/my_aircraft/nd/controls/mode</property>
          <value>VFR</value>
        </equals>
      </or>
    </condition>
  </label>
