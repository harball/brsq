  <!--
================================================================================
                                                             TURN BANK INDICATOR
================================================================================
-->
  <!-- ~~~~~~~~~~~~~~~~~~ tbi for NAV, VFR mode -->
  <turn-bank-indicator>
    <name>Turn Indicator</name>
    <x>-50</x>
    <y>-85</y>
    <width>100</width>
    <height>100</height>
    <bank-input>
      <property>/orientation/roll-deg</property>
    </bank-input>
    <sideslip-input>
      <property>/orientation/side-slip-deg</property>
    </sideslip-input>
    <bank-scale>true</bank-scale>
    <option>bottom</option>
    <condition>
      <or>
        <equals>
          <property>/instrumentation/my_aircraft/nd/controls/mode</property>
          <value>NAV</value>
        </equals>
        <equals>
          <property>/instrumentation/my_aircraft/nd/controls/mode</property>
          <value>VFR</value>
        </equals>
      </or>
    </condition>
  </turn-bank-indicator>

  <!-- ~~~~~~~~~~~~~~~~~~ tbi for APP, NAV, VFR mode -->
  <turn-bank-indicator>
    <name>Turn Indicator APP</name>
    <x>-80</x>
    <y>-20</y>
    <width>160</width>
    <height>50</height>
    <bank-input>
      <property>/orientation/roll-deg</property>
    </bank-input>
    <sideslip-input>
      <property>/orientation/side-slip-deg</property>
    </sideslip-input>
    <bank-scale>true</bank-scale>
    <option>top</option>
