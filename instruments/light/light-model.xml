  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control formation light -->
  <animation>
    <type>pick</type>
    <object-name>light.knob_7</object-name>
    <object-name>light.knob_7-emit</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-cycle</command>
        <property>sim/multiplay/generic/float[2]</property>
        <value>0</value>
        <value>.33</value>
        <value>.66</value>
        <value>1</value>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>1</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-cycle</command>
        <property>sim/multiplay/generic/float[2]</property>
        <value>1</value>
        <value>.66</value>
        <value>.33</value>
        <value>0</value>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-formation-lights</tooltip-id>
        <label>Formation lights %s%%</label>
        <mapping>percent</mapping>
        <property>sim/multiplay/generic/float[2]</property>
      </binding>
    </hovered>
  </animation>

