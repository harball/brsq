  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control navigation light -->
  <animation>
    <type>pick</type>
    <object-name>light.btn_1</object-name>
    <command>property-toggle</command>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>sim/multiplay/generic/int[1]</property>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-navigation-lights</tooltip-id>
        <label>Navigation lights</label>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ animation navigation light -->
  <!-- push -->
  <animation>
    <type>translate</type>
    <object-name>light.btn_1</object-name>
    <object-name>light.btn_1-emit</object-name>
    <property>sim/multiplay/generic/int[1]</property>
    <factor>0.002</factor>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <!-- label ON if enabled -->
  <animation>
    <type>textranslate</type>
    <object-name>light.btn_1-emit</object-name>
    <condition>
      <property>sim/multiplay/generic/int[1]</property>
    </condition>
    <property>sim/multiplay/generic/int[1]</property>
    <factor>.078</factor>
    <step>1</step>
    <axis>
      <x>0</x>
      <y>-1</y>
    </axis>
  </animation>
  <!-- emission if enabled -->
  <animation>
    <type>material</type>
    <object-name>light.btn_1-emit</object-name>
    <condition>
      <property>sim/multiplay/generic/int[1]</property>
    </condition>
    <emission>
      <factor>1</factor>
      <red>1</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>
  <!-- emission if disabled -->
  <animation>
    <type>material</type>
    <object-name>light.btn_1-emit</object-name>
    <condition>
      <or>
        <not><property>sim/multiplay/generic/int[1]</property></not>
        <not><property>sim/multiplay/generic/int[5]</property></not>
      </or>
    </condition>
    <emission>
      <factor-prop>/controls/lighting/instruments-norm</factor-prop>
      <red>0.8</red>
      <green>0.2</green>
      <blue>0.2</blue>
    </emission>
  </animation>
  <!-- no emission if no volt -->
  <animation>
    <type>select</type>
    <object-name>light.btn_1-emit</object-name>
    <condition>
      <and>
        <property>sim/multiplay/generic/int[5]</property>
        <property>sim/multiplay/generic/int[7]</property>
        <property>sim/multiplay/generic/int[1]</property>
      </and>
    </condition>
  </animation>

