<PropertyList>

  <name>fuel</name>
  <path>instrument_fuel.ac</path>

  <!--
================================================================================
                                                             OBJECTS DECLARATION
================================================================================
  -->
  <!-- ~~~~~~~~~~~~~~~~~~ opaque + transparent -->
  <animation>
    <object-name>fuel.box</object-name>
    <object-name>fuel.screen.off</object-name>
    <object-name>fuel_canvas_screen</object-name>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ hidden -->
  <!--animation>
    <type>select</type>
    <condition>
      <false />
    </condition>
  </animation-->

  <animation>
    <type>select</type>
    <object-name>fuel.screen.off</object-name>
    <condition>
      <not><property>sim/multiplay/generic/int[5]</property></not>
    </condition>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ transparent -->

  <!-- ~~~~~~~~~~~~~~~~~~ effects -->
  <effect>
    <inherits-from>Aircraft/bourrasque/models/effects/interior/interior-flashlight</inherits-from>
    <object-name>fuel.box</object-name>
    <object-name>fuel.screen.off</object-name>
    <object-name>fuel_canvas_screen</object-name>
  </effect>

  <!-- ~~~~~~~~~~~~~~~~~~ emitting (light) -->
  <animation>
    <type>material</type>
    <object-name>fuel_canvas_screen</object-name>
    <condition>
      <greater-than>
        <property>/controls/lighting/instruments-norm</property>
        <value>0.1</value>
      </greater-than>
    </condition>
    <emission>
      <factor-prop>/controls/lighting/instruments-norm</factor-prop>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>fuel_canvas_screen</object-name>
    <condition>
      <equals>
        <property>/controls/lighting/instruments-norm</property>
        <value>0</value>
      </equals>
    </condition>
    <emission>
      <factor>1</factor>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
    </emission>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ emitting (color) -->
  <!-- ~~~~~~~~~~~~~~~~~~ emitting (enabled) -->

  <!--
================================================================================
                                                         CONTROLS AND ANIMATIONS
================================================================================
  -->


</PropertyList>
