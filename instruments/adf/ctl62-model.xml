  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control power -->
  <animation>
    <type>pick</type>
    <object-name>CTL-62.pwr</object-name>
    <action>
      <button>1</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/adf[0]/func-knob</property>
        <step>-1</step>
        <min>0</min>
        <max>3</max>
        <wrap>0</wrap>
      </binding>
      <binding>
        <condition>
          <greater-than>
            <property>instrumentation/adf[0]/func-knob</property>
            <value>0</value>
          </greater-than>
        </condition>
        <command>property-assign</command>
        <property>instrumentation/adf[0]/ident-audible</property>
        <value>1</value>
      </binding>
      <binding>
        <condition>
          <equals>
            <property>instrumentation/adf[0]/func-knob</property>
            <value>0</value>
          </equals>
        </condition>
        <command>property-assign</command>
        <property>instrumentation/adf[0]/mode</property>
        <value>off</value>
      </binding>
      <binding>
        <condition>
          <equals>
            <property>instrumentation/adf[0]/func-knob</property>
            <value>1</value>
          </equals>
        </condition>
        <command>property-assign</command>
        <property>instrumentation/adf[0]/mode</property>
        <value>ant</value>
      </binding>
      <binding>
        <condition>
          <equals>
            <property>instrumentation/adf[0]/func-knob</property>
            <value>2</value>
          </equals>
        </condition>
        <command>property-assign</command>
        <property>instrumentation/adf[0]/mode</property>
        <value>adf</value>
      </binding>
      <binding>
        <condition>
          <equals>
            <property>instrumentation/adf[0]/func-knob</property>
            <value>3</value>
          </equals>
        </condition>
        <command>property-assign</command>
        <property>instrumentation/adf[0]/mode</property>
        <value>tone</value>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>adf-swap-freq</tooltip-id>
        <label>ADF mode: %s</label>
        <property>instrumentation/adf[0]/mode</property>
