<?xml version="1.0" encoding="utf-8"?>

<!-- DEFINITION OF ALIASES OR INTERNAL PROPERTIES -->

<!-- /instrumentation/my_aircraft/chrono/ -->
<PropertyList>

  <!-- used for start/stop -->
  <serviceable type="bool">true</serviceable>
  <volt type="float">28</volt>

  <!-- data used for display : captors -->
  <inputs>
    <hour_real      alias="/sim/time/real/hour" />
    <hour_utc       alias="/instrumentation/clock/indicated-hour" />
    <hour_loc       alias="/instrumentation/clock/local-hour" />
    <min            alias="/instrumentation/clock/indicated-min" />
    <sec            alias="/instrumentation/clock/indicated-sec" />
    <day            alias="/sim/time/real/day" />
    <month          alias="/sim/time/real/month" />
    <elapsed-sec    alias="/sim/time/elapsed-sec" />

<!--
    <digit1 type="int">12</digit1>
    <digit2 type="int">34</digit2>
    <digit3 type="int">56</digit3>
    <digit4 type="int">78</digit4>
    <needle type="int">10</needle>
-->

  </inputs>

  <!-- data used to control instrument -->
  <controls>
    <chr-knob type="int">0</chr-knob>  <!-- 0=dh,  1=chr -->
    <et-knob  type="int">0</et-knob>   <!-- 0=hld, 1=run, 2=rst -->
    <dh-knob  type="int">0</dh-knob>   <!-- 0=utc, 1=loc -->
  </controls>

</PropertyList>

