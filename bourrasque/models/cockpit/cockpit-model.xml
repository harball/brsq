  <!--
________________________________________________________________________________
                                                                     RIGHT HOTAS
  -->
  <animation>
    <type>rotate</type>
    <object-name>hotas_R</object-name>
    <property>/controls/flight/elevator</property>
    <factor>8</factor>
    <center>
      <x-m>-3.5072</x-m>
      <y-m>0</y-m>
      <z-m>0.4044</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>hotas_R</object-name>
    <property>/controls/flight/aileron</property>
    <factor>8</factor>
    <center>
      <x-m>-3.5072</x-m>
      <y-m>0.3997</y-m>
      <z-m>0.4044</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!--
________________________________________________________________________________
                                                                      LEFT HOTAS
  -->
  <animation>
    <type>translate</type>
    <object-name>hotas_L</object-name>
    <property>/controls/engines/engine[0]/throttle</property>
    <factor>.06</factor>
    <axis>
      <x>-.118</x>
      <y>.011</y>
      <z>0.009</z>
    </axis>
  </animation>

  <!--
________________________________________________________________________________
                                                                  LEFT PALONNIER
  -->
  <!-- ~~~~~~~~~~~~~~~~~~ rudder -->
  <animation>
    <type>translate</type>
    <object-name>palonnier_L</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor>.03</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~ brakes -->
  <animation>
    <type>rotate</type>
    <object-name>palonnier_L</object-name>
    <property>/gear/gear[1]/brake-position-norm</property>
    <factor>10</factor>
    <center>
      <x-m>-4.186</x-m>
      <y-m>0</y-m>
      <z-m>0.295</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>

  <!--
________________________________________________________________________________
                                                                 RIGHT PALONNIER
  -->
  <!-- ~~~~~~~~~~~~~~~~~~ rudder -->
  <animation>
    <type>translate</type>
    <object-name>palonnier_R</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor>.03</factor>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~ brakes -->
  <animation>
    <type>rotate</type>
    <object-name>palonnier_R</object-name>
    <property>/gear/gear[2]/brake-position-norm</property>
    <factor>10</factor>
    <center>
      <x-m>-4.186</x-m>
      <y-m>0</y-m>
      <z-m>0.295</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ verrin canopy -->
  <animation>
    <type>rotate</type>
    <object-name>verrin_canopy</object-name>
    <object-name>piston_canopy</object-name>
    <property>sim/multiplay/generic/float[0]</property> <!-- for MP sim/model/canopy-pos-norm -->
    <interpolation>
      <entry><ind>0</ind><dep>0</dep></entry>
      <entry><ind>0.6</ind><dep>0</dep></entry>
      <entry><ind>0.87</ind><dep>0</dep></entry>
      <entry><ind>1</ind><dep>1</dep></entry>
    </interpolation>
    <center>
      <x-m>-1.431</x-m>
      <y-m>0</y-m>
      <z-m>0.928</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~ translating piston -->
  <animation>
    <type>translate</type>
    <object-name>piston_canopy</object-name>
    <property>sim/multiplay/generic/float[0]</property> <!-- for MP sim/model/canopy-pos-norm -->
    <interpolation>
      <entry><ind>0</ind><dep>0</dep></entry>
      <entry><ind>0.6</ind><dep>.005</dep></entry>
      <entry><ind>1</ind><dep>.073</dep></entry>
    </interpolation>
    <axis>
      <x>.6</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>

